{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": ["node_modules"]
}
